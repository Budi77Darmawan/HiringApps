<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/img_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:src="@drawable/ic_school"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_nameSchool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Nama Sekolah"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img_school"
            app:layout_constraintEnd_toStartOf="@id/img_more"
            app:layout_constraintTop_toTopOf="@id/img_school"/>

        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Pekerjaan"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_nameSchool"
            app:layout_constraintTop_toBottomOf="@id/tv_nameSchool"/>

        <ImageView
            android:id="@+id/img_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_dot"
            app:layout_constraintStart_toEndOf="@id/tv_job"
            app:layout_constraintTop_toTopOf="@id/tv_job"
            app:layout_constraintBottom_toBottomOf="@id/tv_job"/>

        <TextView
            android:id="@+id/tv_jobType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Tipe Pekerjaan"
            app:layout_constraintStart_toEndOf="@id/img_dot"
            app:layout_constraintTop_toTopOf="@id/tv_job"
            app:layout_constraintBottom_toBottomOf="@id/tv_job"/>

        <TextView
            android:id="@+id/tv_schoolDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tanggal Sekolah"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_job"
            app:layout_constraintStart_toStartOf="@id/tv_nameSchool"/>

        <TextView
            android:id="@+id/tv_schoolLoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Lokasi Sekolah"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/img_more"
            app:layout_constraintStart_toStartOf="@id/tv_nameSchool"
            app:layout_constraintTop_toBottomOf="@id/tv_schoolDate" />

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nameSchool"
            app:layout_constraintBottom_toBottomOf="@id/tv_nameSchool"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0.6dp"
            android:background="#c0c0c0"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/img_more"
            app:layout_constraintStart_toStartOf="@id/img_school"
            app:layout_constraintTop_toBottomOf="@id/tv_schoolLoc"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>